<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Imob.DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="Theme.Imob.BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_shape</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="Theme.Imob.AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Imob.BottomSheet</item>
    </style>

    <style name="Theme.Imob.MoreMenuOptions">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Theme.Imob.MoreMenuOptionsCardView">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>