<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_or_signup_activity_bg"
    android:paddingStart="36dp"
    android:paddingTop="80dp"
    android:paddingEnd="36dp"
    android:paddingBottom="160dp"
    tools:context=".view.activity.LoginOrSignupActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/login_or_signup_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/login_or_signup_form_bg"
        android:padding="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/login_or_signup_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/tab_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>